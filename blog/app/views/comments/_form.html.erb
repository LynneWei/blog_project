<%= form_for([@article, @article.comments.build]) do |f| %>
  <% if @article.comments.build.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.comments.build.errors.count,"errors ") %>prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.comments.build.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit %><br>
  </p>
<% end %>