<%= form_for([@article, @article.comments.build]) do |f| %>
  <% if @article.comments.build.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.comments.build.errors.count,"errors ") %>prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.comments.build.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "评论者", class: 'control-label' %><br>
    <%= f.text_field :commenter, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "评论内容", class: 'control-label' %><br>
    <%= f.text_field :body, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "发表评论", class: 'btn btn-primary' %><br>
  </div>
<% end %>