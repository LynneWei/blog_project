<div class="col-sm-4 col-sm-offset-4 panel panel-default">
  <div class="panel-body">
    <%= form_for @article do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count,"errors ") %>prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label '标题', class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label '内容', class: 'control-label' %>
        <%= f.text_area :text, class: 'form-control' %>
      </div>
      <div>
      <div class="form-group">
        <%= f.submit '发表', class: 'btn btn-primary form-control' %>
      </div>
      </div>
    <% end %>
  </div>
</div>
