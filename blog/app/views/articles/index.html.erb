<%= render 'shared/navigation_bar' %>

<div class="panel-row">
  <% @article.each do |article| %>
    <% if article.id != 0 %>
      <% if request.url.split('.')[1] == article.category %>    
        <!-- <div class="col-sm-3"> -->
          <div class="panel panel-default article-panel">
            <div class="panel-heading">
              <h4 class="panel-title"><%= article.title %>
              <span>
                <% if article.category=='1' %>
                  摄影类
                <% elsif article.category=='2' %>
                  技术类
                <% elsif article.category=='3' %>
                  生活类
                <% end %>     
              </span>
              </h4>
            </div>
            <div class="panel-body article-content">
              <p class="main-content"><%= article.text %></p>
              <p class="second-content">......</p>
            </div>
            <div class="panel-footer">
            <% if session[:user_id] != nil %>
              <%= link_to '删除', article_path(article), method: :delete, data: {confirm: "确定删除?"} %>
            <% else %>
            <% end %>
              <%= link_to '查看详情', article_path(article) %>
            </div>
          </div>
        <!-- </div> -->
      <% end %>
    <% end %>
  <% end %>
</div>


