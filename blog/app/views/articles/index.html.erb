<h1 class="text-center">Listing articles</h1>

<table class="table">
  <thead>
  	<tr>
  	  <th>title</th>
  	  <th>text</th>
      <th colspan="2">操作</th>
  	</tr>
  </thead>
  <tbody>
  	<% @article.each do |article| %>
      <% if article.id != 0 %>
  	  <tr>
  	  	<td><%= article.title %></td>
  	  	<td><%= article.text %></td>
  	  	<td><%= link_to 'show', article_path(article) %></td>
        <!-- <td> --><%#= link_to 'edit', edit_article_path(article) %><!-- </td> -->
        <td><%= link_to 'destroy', article_path(article), method: :delete, data: {confirm: "确定删除?"} %></td>
  	  </tr>
      <% end %>
  	<% end %>
  </tbody>
</table>
