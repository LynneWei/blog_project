<div class="container-fluid login">
  <!-- <h1 class="text-center">登录</h1> -->
  <div class="login-bg-drop">
    <div class="col-sm-4 col-sm-offset-4 panel panel-default login-form">
      <div class="panel-heading login-title"><h3>登录</h3></div>
      <div class="panel-body">
        <%= form_tag sessions_path, method: :post do %>
          <div class="form-group">
            <%= label_tag '登录名', nil, class: 'control-label' %>
            <%= text_field_tag :name, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag '密码', nil, class: 'control-label' %>
            <%= text_field_tag :password, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= submit_tag nil, class: 'btn btn-primary form-control' %>
          </div>
          <p class="text-right"><small>还没有账号？快去<%= link_to '注册', new_user_path %></small></p>
        <% end %>
      </div>
    </div>
  </div>
</div>


