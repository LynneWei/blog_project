ul.dropdown-menu > li >.border-gradient {
  visibility: hidden;
}
ul.dropdown-menu > li:hover >.border-gradient {
  visibility: visible;
}
.border-gradient {
  width: 100%;
  height: 1px;
  margin-bottom: 4px;
  background: linear-gradient(to right, #d6e9fc, #22272d, #d6e9fc);
}








