nav.navbar.navbar-inverse {
  background-color: #22272d;
  /*border-color: #22272d;*/
  border-radius: 0;
  margin-bottom: 0;
}
.navbar-nav > li {
  color: #bec2f5;
  padding-left: 20px;
  padding-right: 20px;
  /*background-color: green;*/
  font-size: 14px;
}
.navbar-nav > li > a {
  /*margin-left: 20px;*/
  /*background-color: red;*/
  font-size: 14px;
}
a.dropdown-toggle.nav-link {
  padding-left: 19px;
  padding-right: 19px;
}
.navbar-nav > li > a:after {
  content: ']';
  color: #22272d;
  margin-left: 10px;
  display: inline-block;
}
.navbar-nav > li > a:before {
  content: '[';
  color: #22272d;
  margin-right: 10px;
  display: inline-block;
}
.navbar-inverse .navbar-nav > li > a.nav-link:hover {
  color: #d6e9fc;
}
.navbar-nav > li > a:hover {
  display: inline-block;
}
.navbar-nav > li > a:hover:after {
  content: ']';
  color: #d6e9fc;
  margin-left: 10px;
  display: inline-block;
}
.navbar-nav > li > a:hover:before {
  content: '[';
  color: #d6e9fc;
  margin-right: 10px;
  display: inline-block;
}
.navbar-inverse .navbar-nav > .open > a:before,
.navbar-inverse .navbar-nav > .open > a:after,
.navbar-inverse .navbar-nav > .open > a {
  color: #d6e9fc;
}
ul.dropdown-menu {
  z-index: 3000;
