div.container-fluid {
  padding-left: 0;
  padding-right: 0;
}
.personal-block,
.category-block,
.leave-message-block {
  width: 100%;
  height: 800px;
  background-size: 100% 800px;
  background-attachment: fixed;
}
.coat-block {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  /*opacity: 0.2;*/
}
.personal-block {
  background-image: url(<%= asset_path('governance/v2/dashboards/bg-5.jpg') %>);
}
.category-block {
  background-image: url(<%= asset_path('governance/v2/dashboards/bg-6.jpg') %>);
}
.leave-message-block {
  background-image: url(<%= asset_path('governance/v2/dashboards/bg-1.jpg') %>);
}
.person-show,
.article-category,
.message-board {
  width: 100%;
  height: 400px;
  background-color: #2ba8f9;
  /*background-color: #44ee99;*/
  z-index: 2000;
  position: relative;
  border-bottom: #2ba8f9;
  /*position: absolute;
  top: 30px;*/
}
.person-show::after,
.article-category::after,
.message-board::after {
  content: '';
  z-index: 20000;
  border-top: 100px solid #2ba8f9;
  /*border-top: 100px solid #44ee99;*/
  border-left: 1295px solid transparent; 
  position: absolute;
  top: 400px;
}
.message-board::before,
.article-category::before {
  content: '';
  z-index: 20000;
  border-bottom: 100px solid #2ba8f9;
  /*border-bottom: 100px solid #44ee99;*/
  border-right: 1295px solid transparent; 
  position: absolute;
  top: -100px;
}
.person-title {
  margin-top: 0;
  color: #d6e9fc;
  padding-top: 80px;
  margin-left: -40px;
  margin-bottom: 30px;
}
.person-infomation {
  font-size: 16px;
  color: #22272d;
  font-family: '微软雅黑';
}












